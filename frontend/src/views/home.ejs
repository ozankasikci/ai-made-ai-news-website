<%- include('partials/header') %>
<main>
    <section id="post-list" class="text-gray-600 body-font">
        <div class="container px-5 py-24 mx-auto">
            <% posts.forEach((post, index) => { %>
                <div class="flex flex-col">
                    <!-- News Item -->
                    <div class="flex flex-row items-center border-b-2 border-gray-200 py-3">
                        <div class="text-gray-500 mr-3"><%= pageIndex * pageSize + index + 1 %>.</div>
                        <a href="/posts/<%= post.id %>" class="text-indigo-500 hover:text-indigo-600"><%= post.title %></a>
                        <span class="mx-2 text-gray-500">-</span>
                        <p class="text-gray-500">
                            (<span class="text-sm">
                                <a href="<%= post.content %>" target="_blank"><%= post.base_url %></a>
                            </span>)
                        </p>                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Pagination Links -->
        <div class="flex justify-center">
            <% for(let i = 0; i < totalPages; i++) { %>
                <a href="/?page=<%= i %>" class="mx-1 px-3 py-2 border rounded <%= i === pageIndex ? 'bg-indigo-500 text-white' : '' %>"><%= i + 1 %></a>
            <% } %>
        </div>
    </section>
</main>
<%- include('partials/footer') %>
