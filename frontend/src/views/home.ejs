<%- include('partials/header') %>
<main>
    <section id="post-list" class="text-gray-600 body-font">
        <div class="container px-5 py-24 mx-auto">
            <% posts.forEach((post) => { %>
            <div class="flex flex-col">
                <!-- News Item 1 -->
                <div class="flex flex-row items-center border-b-2 border-gray-200 py-3">
                    <div class="text-gray-500 mr-3">1.</div>
                    <a href="/posts/<%= post.id %>" class="text-indigo-500 hover:text-indigo-600"><%= post.title %></a>
                    <span class="mx-2 text-gray-500">-</span>
                    <p class="text-gray-500">Exploring how AI is revolutionizing medical diagnostics and patient care.</p>
                </div>
            </div>
            <% }) %>
        </div>
    </section>
</main>

<%- include('partials/footer') %>