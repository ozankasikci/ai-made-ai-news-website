
<%- include('partials/header') %>

<main>
    <section class="text-gray-600 body-font">
        <div class="container px-5 py-24 mx-auto">
            <div class="mb-10">
                <a href="/" class="text-indigo-500 hover:text-indigo-600">‚Üê Back to home</a>
            </div>
            <div class="bg-white shadow-lg rounded-lg px-8 pt-6 pb-8 mb-4">
                <h1 class="text-3xl mb-6 text-gray-900 font-bold"><%= post.title %></h1>
                <p class="text-base text-gray-700"><%= post.content %></p>
            </div>
        </div>
    </section>
    
    <section id="comments-section" class="container mx-auto px-5 py-8">
        <h3 class="text-xl font-semibold mb-4">Comments</h3>
        <div id="comments-list" class="space-y-4">
            <% post.comments.forEach(comment => { %>
                <div class="p-4 bg-white rounded shadow">
                    <p class="text-gray-800"><%= comment.author %>: <%= comment.text %></p>
                </div>
            <% }); %>
        </div>

        <form id="comment-form" action="/add-comment" method="post" class="mt-6">
            <textarea name="comment" class="w-full p-2 border border-gray-300 rounded" placeholder="Add a comment..."></textarea>
            <button type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded mt-3">Submit Comment</button>
        </form>
    </section>
</main>

<%- include('partials/footer') %>